  <%= message_block :on => :profile %>
  <div class="actions table" style="width:100%">
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :first_name, "First Name" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :last_name, "Last Name" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_field :last_name %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :email, "E-mail Address" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_field :email %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :confirm_email, "Confirm E-mail Address" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_field :confirm_email %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :phone, "Phone Number" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_field :phone %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :district, "District" %><br>
      <div class="form_note">Select the district you want to cover.</div>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.select :district, options_for_select(Profile::DISTRICTS), :include_blank => true %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :facebook_url, "Facebook Account URL" %>
      <div class="form_note">Example: http://www.facebook.com/joesmith123</div>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_field :facebook_url %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :facebook_no_of_friends, "Facebook # of friends" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_field :facebook_no_of_friends %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :twitter_url, "Twitter Account URL" %>
      <div class="form_note">Example: http://www.twitter.com/joesmith123</div>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_field :twitter_url %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :twitter_no_of_followers, "Twitter # of followers" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_field :twitter_no_of_followers %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :qualifications, "Qualifications" %>
      <div class="form_note">List any subject matter or writing experience.</div>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_area :qualifications %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :experience, "Journalistic Experience" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_area :experience %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :content_sample, "Content Samples" %>
      <div class="form_note">Post links to works published online, or post full samples in text box. Unpublished work accepted.</div>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_area :content_sample %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :editorial_ideas, "Editorial Ideas" %>
      <div class="form_note">Posts you could write. Include the issue, the angle, and why it would appeal to the audience.</div>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_area :editorial_ideas %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :key_issue_1, "Key Issue #1" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.select :key_issue_1, options_for_select(Profile::ISSUES), :include_blank => true %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :key_issue_2, "Key Issue #2" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.select :key_issue_2, options_for_select(Profile::ISSUES), :include_blank => true %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :key_issue_3, "Key Issue #3" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.select :key_issue_3, options_for_select(Profile::ISSUES), :include_blank => true %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :media_formats, "Formats You Would Use" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.check_box :media_formats, {:multiple => true}, "Text", nil %>Text<br />
      <%= f.check_box :media_formats, {:multiple => true}, "Video", nil %>Video<br />
      <%= f.check_box :media_formats, {:multiple => true}, "Photos", nil %>Photos<br />
      <%= f.check_box :media_formats, {:multiple => true}, "Audio", nil %>Audio
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :equipment_access, "Access to Equipment" %>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.check_box :equipment_access, {:multiple => true}, "Webcam", nil %>Webcam<br />
      <%= f.check_box :equipment_access, {:multiple => true}, "Video Camera", nil %>Video Camera<br />
      <%= f.check_box :equipment_access, {:multiple => true}, "Still Camera", nil %>Still Camera<br />
      <%= f.check_box :equipment_access, {:multiple => true}, "iPhone", nil %>iPhone<br />
      <%= f.check_box :equipment_access, {:multiple => true}, "Other Mobile", nil %>Other Mobile
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :conflict_of_interest, "Declare Conflicts of Interest" %>
      <div class="form_note">Conflicts include current or past affiliations with a political party, advocacy, or interest group.</div>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_area :conflict_of_interest %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :other_comments, "Other Comments" %>
      <div class="form_note">Anything else that helps explain your qualification for this position.</div>
      </div>
      <div class="td field-col" style="width:65%">
      <%= f.text_area :other_comments %>
      </div>
    </div>
    <div class="tr" style="width:100%">
      <div class="td">
      <%= f.label :accepted_tos, "Do you accept the ToS?" %>
      </div>
      <div class="td field-col" style="width:65%">
      <div style="display:inline-block"><%= f.check_box :accepted_tos %></div><div class="form_note" style="display:inline-block">I Accept</div>
      </div>
    </div>
  </div>
  <div style="width:100%;text-align:center;">
  <br>
    <p>REVIEW APPLICATION NOW. YOU CANNOT MAKE ANY CHANGES ONCE YOU SUBMIT.</p>
    <%= f.submit "Submit Application", :style => "font-size:2em" %>
  </div>

