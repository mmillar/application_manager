<%= form_for(@profile) do |f| %>
  <%= message_block :on => :profile %>
  <div class="actions">
    <div>
      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name %>
    </div>
    <div>
      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name %>
    </div>
    <div>
      <%= f.label :email, "E-mail Address" %>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label :confirm_email, "Confirm E-mail Address" %>
      <%= f.text_field :confirm_email %>
    </div>
    <div>
      <%= f.label :phone, "Phone Number" %>
      <%= f.text_field :phone %>
    </div>
    <div>
      <%= f.label :district, "District" %>
      <%= f.select :district, @districts, :include_blank => true %>
    </div>
    <div>
      <%= f.label :facebook_url, "Facebook Account URL" %>
      <%= f.text_field :facebook_url %>
    </div>
    <div>
      <%= f.label :facebook_no_of_friends, "Facebook # of friends" %>
      <%= f.text_field :facebook_no_of_friends %>
    </div>
    <div>
      <%= f.label :twitter_url, "Twitter Account URL" %>
      <%= f.text_field :twitter_url %>
    </div>
    <div>
      <%= f.label :twitter_no_of_followers, "Twitter # of followers" %>
      <%= f.text_field :twitter_no_of_followers %>
    </div>
    <div>
      <%= f.label :qualifications, "Qualifications" %>
      <%= f.text_area :qualifications %>
    </div>
    <div>
      <%= f.label :experience, "Journalistic Experience" %>
      <%= f.text_area :experience %>
    </div>
    <div>
      <%= f.label :content_sample, "Content Samples" %>
      <%= f.text_area :content_sample %>
    </div>
    <div>
      <%= f.label :editorial_ideas, "Editorial Ideas" %>
      <%= f.text_area :editorial_ideas %>
    </div>
    <div>
      <%= f.label :key_issue_1, "Key Issue #1" %>
      <%= f.select :key_issue_1, @key_issues, :include_blank => true %>
    </div>
    <div>
      <%= f.label :key_issue_2, "Key Issue #2" %>
      <%= f.select :key_issue_2, @key_issues, :include_blank => true %>
    </div>
    <div>
      <%= f.label :key_issue_3, "Key Issue #3" %>
      <%= f.select :key_issue_3, @key_issues, :include_blank => true %>
    </div>
    <div>
      <%= f.label :media_formats, "Formats You Would Use" %>
      <%= f.check_box :media_formats, {:multiple => true}, "Text", nil %>Text<br />
      <%= f.check_box :media_formats, {:multiple => true}, "Video", nil %>Video<br />
      <%= f.check_box :media_formats, {:multiple => true}, "Photos", nil %>Photos<br />
      <%= f.check_box :media_formats, {:multiple => true}, "Audio", nil %>Audio
    </div>
    <div>
      <%= f.label :equipment_access, "Access to Equipment" %>
      <%= f.check_box :equipment_access, {:multiple => true}, "Webcam", nil %>Webcam<br />
      <%= f.check_box :equipment_access, {:multiple => true}, "Video Camera", nil %>Video Camera<br />
      <%= f.check_box :equipment_access, {:multiple => true}, "Still Camera", nil %>Still Camera<br />
      <%= f.check_box :equipment_access, {:multiple => true}, "iPhone", nil %>iPhone<br />
      <%= f.check_box :equipment_access, {:multiple => true}, "Other Mobile", nil %>Other Mobile
    </div>
    <div>
      <%= f.label :conflict_of_interest, "Declare Conflicts of Interest" %>
      <%= f.text_area :conflict_of_interest %>
    </div>
    <div>
      <%= f.label :other_comments, "Other Comments" %>
      <%= f.text_area :other_comments %>
    </div>
    <div>
      <%= f.label :accepted_tos, "Do you accept the ToS?" %>
      <%= f.check_box :accepted_tos %>I accept
    </div>
    <p>REVIEW APPLICATION NOW. YOU CANNOT MAKE ANY CHANGES ONCE YOU SUBMIT.</p>
    <%= f.submit "Submit Application" %>
  </div>
<% end %>
